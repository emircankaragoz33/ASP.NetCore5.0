@using EntityLayer.Concrete
@model Contact



<section class="page-section" id="contact">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 col-xl-6 text-center">
                <h2 class="mt-0">Bize ulaşın!</h2>
                <hr class="divider" />
                <p class="text-muted mb-5">Bize ulaşmak ister misiniz? En yakın zamanda size mail üzerinden dönelim!</p>
            </div>
        </div>
        <div class="row gx-4 gx-lg-5 justify-content-center mb-5">
            <div class="col-lg-6">
               
                <form id="contactForm" asp-action="MesajGonder" asp-controller="Anasayfa" >
                    <!-- Name input-->
                    <div class="form-floating mb-3">
                        <input class="form-control" id="name" asp-for="GonderenAd" type="text" placeholder="Enter your name..." data-sb-validations="required" />
                        <label for="name">Adınız Soyadınız</label>
                        <div class="invalid-feedback" data-sb-feedback="name:required">Ad gereklidir.</div>
                    </div>
                    <!-- Email address input-->
                    <div class="form-floating mb-3">
                        <input class="form-control" asp-for="Email" id="email" type="email" placeholder="name@example.com" data-sb-validations="required,email" />
                        <label for="email">Email Adresiniz</label>
                        <div class="invalid-feedback" data-sb-feedback="email:required">Email gereklidir.</div>
                        <div class="invalid-feedback" data-sb-feedback="email:email">Email is not valid.</div>
                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control" asp-for="Telefon" id="Phone" type="text" />
                        <label for="email">Telefon numaranız</label>
       
                    </div>

                    <!-- Message input-->

                    <div class="form-floating mb-3">
                        <textarea class="form-control" asp-for="Mesaj" id="message" type="text" placeholder="Enter your message here..." style="height: 10rem" data-sb-validations="required"></textarea>
                        <label for="message">Mesajınız</label>
                        <div class="invalid-feedback" data-sb-feedback="message:required">Mesaj gereklidir.</div>
                    </div>

                    <button type="submit"> Gönder </button>

                    <!-- Submit success message-->
                    <!---->
                    <!-- This is what your users will see when the form-->
                    <!-- has successfully submitted-->
                    <div class="d-none" id="submitSuccessMessage">
                        <div class="text-center mb-3">
                            <div class="fw-bolder">Mesaj gönderildi. En kısa zamanda mailinize dönüş yapılacaktır!
                            <br />
                           
                        </div>
                    </div>
                    <!-- Submit error message-->
                    <!---->
                    <!-- This is what your users will see when there is-->
                    <!-- an error submitting the form-->
                    <div class="d-none" id="submitErrorMessage"><div class="text-center text-danger mb-3">HATA!</div></div>
                    <!-- Submit Button-->
                    <div class="d-grid"><button class="btn btn-primary btn-xl disabled" id="submitButton" type="submit">Gönderildi!</button></div>
                </form>
            </div>
        </div>
    
    </div>
</section>